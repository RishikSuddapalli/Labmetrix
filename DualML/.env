# .env
# Environment
STREAMLIT_ENV=development

# MLflow Configuration
MLFLOW_TRACKING_URI=mlruns
MLFLOW_EXPERIMENT_NAME=EMIPredict_AI

# Data Configuration
DATA_PATH=data/emi_prediction_dataset.csv
SAMPLE_SIZE= 404800
DATA_CHUNK_SIZE= 404800

# Model Training
TEST_SIZE=0.2
RANDOM_STATE=42
CV_FOLDS=5

# Performance
ENABLE_CACHING=True
MAX_UPLOAD_SIZE_MB=200
ENABLE_PREDICTION_CACHING=True

# Security (set to True in production)
ENABLE_AUTH=False
SESSION_TIMEOUT_MINUTES=30
# For Streamlit Cloud deployment, use:
STREAMLIT_ENV=streamlit_cloud
MLFLOW_TRACKING_URI=./mlruns
MAX_UPLOAD_SIZE_MB=100